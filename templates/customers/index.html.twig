{% extends 'base.html.twig' %}

{% block title %}Customers index{% endblock %}

{% block body %}
{% include 'admin/sidebar.html.twig' %}

    <div class="flex-1 flex flex-col overflow-hidden">

        {% include 'admin/header.html.twig' %}

        <div class="flex justify-center p-4">
            <div class="w-full max-w-7xl bg-white p-8 rounded-xl shadow-lg">
                <h1 class="text-2xl font-bold mb-8 text-gray-800 text-center">Customer Index</h1>

                <div class="overflow-x-auto bg-gray-100 p-3 rounded-lg shadow-md">
                    {# This is the ONLY change needed in the Twig template #}
                    <table id="customersTable" class="w-full border-collapse border border-gray-300 bg-white rounded-lg overflow-hidden shadow">
                        <thead class="bg-gray-100 text-gray-700">
                            <tr>
                                <th class="border border-gray-300 px-2 py-2 text-sm font-medium text-center ">Id</th>
                                <th class="border border-gray-300 px-2 py-2 text-sm font-medium text-left ">Name</th>
                                <th class="border border-gray-300 px-2 py-2 text-sm font-medium text-left ">Email</th>
                                <th class="border border-gray-300 px-2 py-2 text-sm font-medium text-left ">Password</th>
                                <th class="border border-gray-300 px-2 py-2 text-sm font-medium text-left ">Address</th>
                                <th class="border border-gray-300 px-2 py-2 text-sm font-medium text-left ">Phone No.</th>
                                <th class="border border-gray-300 px-2 py-2 text-sm font-medium text-center ">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200">
                            {% for customer in customers %}
                                <tr class="odd:bg-white even:bg-gray-50 hover:bg-gray-100">
                                    <td class="border border-gray-300 px-2 py-1 text-center">{{ customer.id }}</td>
                                    <td class="border border-gray-300 px-2 py-1 text-gray-900">{{ customer.customerName }}</td>
                                    <td class="border border-gray-300 px-2 py-1 text-gray-900">{{ customer.customerEmail }}</td>
                                    <td class="border border-gray-300 px-2 py-1 text-gray-900">{{ customer.customerPassword }}</td>
                                    <td class="border border-gray-300 px-2 py-1 text-gray-900">{{ customer.customerAddress }}</td>
                                    <td class="border border-gray-300 px-2 py-1 text-gray-900">{{ customer.customerPhonenumber }}</td>
                                    <td class="border border-gray-300 px-2 py-2 text-center">
                                        <a href="{{ path('app_customers_show', {'id': customer.id}) }}" 
                                        class="text-blue-600 hover:text-blue-800 font-medium">Show</a> <br/>
                                        <a href="{{ path('app_customers_edit', {'id': customer.id}) }}" 
                                        class="text-yellow-600 hover:text-yellow-800 font-medium">Edit</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7" class="px-4 py-2 text-center text-gray-500 bg-gray-50">
                                        No records found
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="mt-6 text-center">
                    <a href="{{ path('app_customers_new') }}" 
                    class="inline-block px-5 py-2 bg-green-600 text-white rounded-lg shadow hover:bg-green-700 ">
                        + Create new
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

