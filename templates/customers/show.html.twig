{% extends 'base.html.twig' %}

{% block title %}Customers{% endblock %}

{% block body %}
{% include 'admin/sidebar.html.twig' %}

<div class="flex-1 flex flex-col overflow-hidden">

    {% include 'admin/header.html.twig' %}

    <div class="flex justify-center p-8 mb-10">
        <div class="w-full max-w-3xl bg-white p-8 rounded-xl shadow-lg">
            <h1 class="text-3xl font-bold text-gray-800 text-center">Customer Details</h1>

            <div class="overflow-hidden rounded-lg shadow-md bg-gray-50 p-6">
                <table class="table-auto w-full mx-auto border border-gray-300 rounded-lg mb-8">
                    <tbody>
                        <tr>
                            <th class="w-40 border border-gray-300 px-4 py-3 text-left bg-gray-100 font-semibold">ID</th>
                            <td class="px-4 py-3 border border-gray-300">{{ customer.id }}</td>
                        </tr>
                        <tr>
                            <th class="w-40 border border-gray-300 px-4 py-3 text-left bg-gray-100 font-semibold">Name</th>
                            <td class="px-4 py-3 border border-gray-300">{{ customer.customerName }}</td>
                        </tr>
                        <tr>
                            <th class="w-40 border border-gray-300 px-4 py-3 text-left bg-gray-100 font-semibold">Name</th>
                            <td class="px-4 py-3 border border-gray-300">{{ customer.customerEmail }}</td>
                        </tr>
                        <tr>
                            <th class="w-40 border border-gray-300 px-4 py-3 text-left bg-gray-100 font-semibold">Name</th>
                            <td class="px-4 py-3 border border-gray-300">{{ customer.customerPassword }}</td>
                        </tr>
                        <tr>
                            <th class="w-40 border border-gray-300 px-4 py-3 text-left bg-gray-100 font-semibold">Name</th>
                            <td class="px-4 py-3 border border-gray-300">{{ customer.customerAddress }}</td>
                        </tr>
                        <tr>
                            <th class="w-40 border border-gray-300 px-4 py-3 text-left bg-gray-100 font-semibold">Quantity</th>
                            <td class="px-4 py-3 border border-gray-300">{{ customer.customerPhonenumber }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Action Buttons -->
            <div class="mt-6 flex justify-center space-x-4 ">
                <a href="{{ path('app_customers_index') }}" 
                class="px-5 py-2 bg-gray-500 text-white rounded-lg shadow hover:bg-gray-600">
                    ⬅ Back to list
                </a>

                <a href="{{ path('app_customers_edit', {'id': customer.id}) }}" 
                class="px-5 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700">
                    ✏ Edit
                </a>

                {{ include('customers/_delete_form.html.twig') }}
            </div>
        </div>
    </div>

</div>
{% endblock %}
