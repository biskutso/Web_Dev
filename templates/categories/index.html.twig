{% extends 'base.html.twig' %}

{% block title %}Categories index{% endblock %}

{% block body %}
    {% include 'admin/sidebar.html.twig' %}

    <div class="flex-1 flex flex-col overflow-hidden">

        {% include 'admin/header.html.twig' %}

        <div class="flex justify-center p-8">
            <div class="w-full max-w-5xl bg-white p-8 rounded-xl shadow-lg">
                <h1 class="text-3xl font-bold mb-8  text-gray-800 text-center">Categories Index</h1>

                <div class="overflow-x-auto bg-gray-100 p-6 rounded-lg shadow-md">
                    <table class="w-full border-collapse border border-gray-300 bg-white rounded-lg overflow-hidden shadow">
                        <thead class="bg-gray-100 text-gray-700">
                            <tr>
                                <th class="border border-gray-300 px-4 py-2 text-sm font-semibold w-12 text-center">Id</th>
                                <th class="border border-gray-300 px-4 py-2 text-sm font-semibold text-left w-40">Category Name</th>
                                <th class="border border-gray-300 px-4 py-2 text-sm font-semibold text-center w-32">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200">
                            {% for category in categories %}
                                <tr class="odd:bg-white even:bg-gray-50 hover:bg-gray-100">
                                    <td class="border border-gray-300 px-4 py-2 text-center">{{ category.id }}</td>
                                    <td class="border border-gray-300 px-4 py-2 font-medium text-gray-900">{{ category.categoryname }}</td>
                                    <td class="border border-gray-300 px-4 py-2 text-center space-x-3">
                                        <a href="{{ path('app_categories_show', {'id': category.id}) }}" 
                                        class="text-blue-600 hover:text-blue-800 font-semibold">Show</a>
                                        <a href="{{ path('app_categories_edit', {'id': category.id}) }}" 
                                        class="text-yellow-600 hover:text-yellow-800 font-semibold">Edit</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="px-4 py-2 text-center text-gray-500 bg-gray-50">
                                        No records found
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                </div>

                <div class="mt-6 text-center">
                    <a href="{{ path('app_categories_new') }}" 
                    class="inline-block px-5 py-2 bg-green-600 text-white rounded-lg shadow hover:bg-green-700 ">
                        + Create new
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
