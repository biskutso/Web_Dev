{% extends 'base.html.twig' %}

{% block title %}Products index{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-gray-200">
        <div class="w-full max-w-4xl bg-white p-8 rounded-xl shadow-lg">
            <h1 class="text-4xl font-bold mb-8  text-gray-800 text-center">Classic Motorcycles Index</h1>

            <div class="overflow-x-auto bg-gray-100 p-6 rounded-lg shadow-md">
                <table class="w-full border-collapse border border-gray-300 bg-white rounded-lg overflow-hidden shadow">
                    <thead class="bg-gray-100 text-gray-700">
                        <tr>
                            <th class="border border-gray-300 px-4 py-2 text-sm font-semibold text-left w-12">Id</th>
                            <th class="border border-gray-300 px-4 py-2 text-sm font-semibold text-left w-40">Name</th>
                            <th class="border border-gray-300 px-4 py-2 text-sm font-semibold text-left w-[100px]">Description</th>
                            <th class="border border-gray-300 px-4 py-2 text-sm font-semibold text-left w-32">Price</th>
                            <th class="border border-gray-300 px-4 py-2 text-sm font-semibold text-left w-24">Quantity</th>
                            <th class="border border-gray-300 px-4 py-2 text-sm font-semibold text-center w-32">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        {% for product in products %}
                            <tr class="odd:bg-white even:bg-gray-50 hover:bg-gray-100">
                                <td class="border border-gray-300 px-4 py-2 text-center">{{ product.id }}</td>
                                <td class="border border-gray-300 px-4 py-2 font-medium text-gray-900">{{ product.name }}</td>
                                <td class="border border-gray-300 px-4 py-2 text-gray-700 w-[100px] truncate">
                                    {{ product.description }}
                                </td>
                                <td class="border border-gray-300 px-4 py-2 text-gray-700 text-center">â‚±{{ product.price }}</td>
                                <td class="border border-gray-300 px-4 py-2 text-gray-700 text-center">{{ product.quantity }}</td>
                                <td class="border border-gray-300 px-4 py-2 text-center space-x-3">
                                    <a href="{{ path('app_products_show', {'id': product.id}) }}" 
                                    class="text-blue-600 hover:text-blue-800 font-semibold">Show</a>
                                    <a href="{{ path('app_products_edit', {'id': product.id}) }}" 
                                    class="text-yellow-600 hover:text-yellow-800 font-semibold">Edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="px-4 py-2 text-center text-gray-500 bg-gray-50">
                                    No records found
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

            </div>

            <div class="mt-6 text-center">
                <a href="{{ path('app_products_new') }}" 
                   class="inline-block px-5 py-2 bg-green-600 text-white rounded-lg shadow hover:bg-green-700 ">
                    + Create new
                </a>
            </div>
        </div>
    </div>
{% endblock %}
