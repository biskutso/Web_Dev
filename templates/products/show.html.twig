{% extends 'base.html.twig' %}

{% block title %}Product Details{% endblock %}

{% block body %}
{% include 'admin/sidebar.html.twig' %}

<div class="flex-1 flex flex-col overflow-hidden">

    {% include 'admin/header.html.twig' %}

    <div class="flex justify-center p-8 mb-10">
        <div class="w-full max-w-3xl bg-white p-8 rounded-xl shadow-lg">
            <h1 class="text-3xl font-bold text-gray-800 text-center">Product Details</h1>

            <div class="overflow-hidden rounded-lg shadow-md bg-gray-50 p-6">
                <table class="table-auto w-full mx-auto border border-gray-300 rounded-lg mb-8">
                    <tbody>
                        <tr>
                            <th class="w-40 border border-gray-300 px-4 py-3 text-left bg-gray-100 font-semibold">ID</th>
                            <td class="px-4 py-3 border border-gray-300">{{ product.id }}</td>
                        </tr>
                        <tr>
                            <th class="w-40 border border-gray-300 px-4 py-3 text-left bg-gray-100 font-semibold">Name</th>
                            <td class="px-4 py-3 border border-gray-300">{{ product.name }}</td>
                        </tr>
                        <tr>
                            <th class="w-40 border border-gray-300 px-4 py-3 text-left bg-gray-100 font-semibold">Description</th>
                            <td class="px-4 py-3 border border-gray-300 whitespace-normal break-words max-w-lg">
                                {{ product.description }}
                            </td>
                        </tr>
                        <tr>
                            <th class="w-40 border border-gray-300 px-4 py-3 text-left bg-gray-100 font-semibold">Name</th>
                            <td class="px-4 py-3 border border-gray-300">{{ product.category ? product.category.categoryName : 'No category' }}</td>
                        </tr>
                        <tr>
                            <th class="w-40 border border-gray-300 px-4 py-3 text-left bg-gray-100 font-semibold">Price</th>
                            <td class="px-4 py-3 border border-gray-300">₱{{ product.price }}</td>
                        </tr>
                        <tr>
                            <th class="w-40 border border-gray-300 px-4 py-3 text-left bg-gray-100 font-semibold">Quantity</th>
                            <td class="px-4 py-3 border border-gray-300">{{ product.quantity }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Action Buttons -->
            <div class="mt-6 flex justify-center space-x-4 ">
                <a href="{{ path('app_products_index') }}" 
                class="px-5 py-2 bg-gray-500 text-white rounded-lg shadow hover:bg-gray-600">
                    ⬅ Back to list
                </a>

                <a href="{{ path('app_products_edit', {'id': product.id}) }}" 
                class="px-5 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700">
                    ✏ Edit
                </a>

                {{ include('products/_delete_form.html.twig') }}
            </div>
        </div>
    </div>

</div>

{% endblock %}
