{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
<div class="flex h-screen overflow-hidden">

    {% include 'admin/sidebar.html.twig' %}

    <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Top Header Bar -->
        {% include 'admin/header.html.twig' %}

        <!-- Main Content Area -->
        <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-100 p-6">
            <h2 class="text-xl font-cinzel text-[#1C1C1C] mb-6">Welcome, Admin!</h2>

            <!-- KPI Cards -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                <div class="bg-white p-6 rounded-lg shadow-md border-t-4 border-[#C49A41]">
                    <h3 class="text-lg font-montserrat font-medium text-gray-500">Total Sales (30 Days)</h3>
                    <p class="text-3xl font-bold text-[#1C1C1C] mt-2">â‚±15,250,320</p>
                    <p class="text-sm text-green-500 mt-1">+12% from last month</p>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-md border-t-4 border-blue-500">
                    <h3 class="text-lg font-montserrat font-medium text-gray-500">New Orders (Today)</h3>
                    <p class="text-3xl font-bold text-[#1C1C1C] mt-2">15</p>
                    <p class="text-sm text-green-500 mt-1">+3 today</p>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-md border-t-4 border-red-500">
                    <h3 class="text-lg font-montserrat font-medium text-gray-500">Pending Services</h3>
                    <p class="text-3xl font-bold text-[#1C1C1C] mt-2">7</p>
                    <p class="text-sm text-red-500 mt-1">2 new requests</p>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-md border-t-4 border-green-500">
                    <h3 class="text-lg font-montserrat font-medium text-gray-500">New Customers (30 Days)</h3>
                    <p class="text-3xl font-bold text-[#1C1C1C] mt-2">48</p>
                    <p class="text-sm text-green-500 mt-1">+8% from last month</p>
                </div>
            </div>

            <!-- Recent Activity & Quick Actions -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <div class="lg:col-span-2 bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-xl font-cinzel text-[#1C1C1C] mb-4">Recent Activity</h3>
                    <ul class="divide-y divide-gray-200">
                        <li class="py-3 flex items-center justify-between">
                            <span class="text-gray-700">Order #1234 placed by <span class="font-semibold">John Doe</span></span>
                            <span class="text-sm text-gray-500">10 min ago</span>
                        </li>
                        <li class="py-3 flex items-center justify-between">
                            <span class="text-gray-700">New Service Request: <span class="font-semibold">Oil Change</span> for a Scrambler</span>
                            <span class="text-sm text-gray-500">35 min ago</span>
                        </li>
                        <li class="py-3 flex items-center justify-between">
                            <span class="text-gray-700">Product '<span class="font-semibold">Vintage Leather Jacket</span>' restocked (Qty: 5)</span>
                            <span class="text-sm text-gray-500">1 hour ago</span>
                        </li>
                        <li class="py-3 flex items-center justify-between">
                            <span class="text-gray-700">Order #1233 <span class="font-semibold text-green-600">shipped</span> to Jane Smith</span>
                            <span class="text-sm text-gray-500">2 hours ago</span>
                        </li>
                    </ul>
                </div>

                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-xl font-cinzel text-[#1C1C1C] mb-4">Quick Actions</h3>
                    <div class="space-y-4">
                        <button onclick="window.location.href='{{ path('app_products_new') }}'" class="cursor-pointer w-full bg-[#C49A41] text-[#1C1C1C] p-3 rounded-lg font-montserrat font-semibold border border-[#C49A41] hover:bg-[#C49A41] transition-colors duration-200">
                            Create New Product
                        </button>
                        <button class="cursor-pointer w-full bg-[#1C1C1C] text-[#C49A41] p-3 rounded-lg font-montserrat font-semibold border border-[#C49A41] hover:bg-gray-800 transition-colors duration-200">
                            Schedule New Service
                        </button>
                        <button onclick="window.location.href='{{ path('app_customers_index') }}'" class="cursor-pointer w-full bg-gray-200 text-gray-700 p-3 rounded-lg font-montserrat font-semibold hover:bg-gray-300 transition-colors duration-200">
                            Manage Customer Accounts
                        </button>
                        <button class="cursor-pointer w-full bg-gray-200 text-gray-700 p-3 rounded-lg font-montserrat font-semibold hover:bg-gray-300 transition-colors duration-200">
                            View All Orders
                        </button>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}