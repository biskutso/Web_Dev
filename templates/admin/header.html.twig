{% extends 'base.html.twig' %}

{% block title %}Products index{% endblock %}

{% block body %}
<header class="flex items-center justify-between p-4 bg-white border-b border-gray-200 shadow-sm">
    <h1 class="text-2xl font-cinzel text-[#1C1C1C]">
        {% set route = app.request.attributes.get('_route') %}
        {% if route == 'app_admin' %}
            Dashboard Overview
        {% elseif route starts with 'app_products_' %}
            Products
        {% elseif route starts with 'app_categories_' %}
            Categories
        {% elseif route starts with 'app_customers_' %}
            Customers
        {% elseif route starts with 'app_services_' %}
            Services
        {% else %}
            Admin Panel
        {% endif %}
    </h1>

    <div class="flex items-center space-x-4">
        <button class="p-2 text-gray-600 hover:text-[#C49A41]">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                 xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 
                      2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 
                      1.055-.595 1.436L4 17h5m6 0v1a3 3 0 
                      11-6 0v-1m6 0H9"></path>
            </svg>
        </button>

        <div class="relative">
            <button class="flex items-center space-x-2 text-gray-700 hover:text-[#C49A41] focus:outline-none">
                <img class="h-8 w-8 rounded-full object-cover"
                     src="https://api.dicebear.com/7.x/initials/svg?seed=AD" alt="Admin Avatar">
                <span class="font-montserrat">Admin</span>
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                     xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M19 9l-7 7-7-7"></path>
                </svg>
            </button>
        </div>
    </div>
</header>
{% endblock %}